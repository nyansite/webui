{
    "compilerOptions": {
        "target": "es2016",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowJs": true,
        "strict": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules"]
}